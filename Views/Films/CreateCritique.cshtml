@model API3.Models.Critique
@inject LanguagService language


@{
    ViewData["Title"] = @language.Getkey("criticism");
}

<h1>@language.Getkey("criticism")</h1>

<h4>@language.Getkey("criticism")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCritique" method = "post" asp-route-id = "@ViewBag.imdbID" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group" type="hidden">
                @*<label asp-for="imdbID" type="hidden" class="control-label"></label>*@
                <input asp-for="imdbID" type="hidden"  value ="@ViewBag.imdbID" class="form-control" />
                <span asp-validation-for="imdbID" type="hidden"class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">@language.Getkey("content")</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@language.Getkey("criticism") class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id ="@ViewBag.imdbID">@language.Getkey("back to list")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
