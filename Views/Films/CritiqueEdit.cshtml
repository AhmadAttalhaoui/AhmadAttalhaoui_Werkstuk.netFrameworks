@model API3.Models.Critique
@inject LanguagService language


@{
    ViewData["Title"] = @language.Getkey("remark edit");
}

<h1>@language.Getkey("edit")</h1>

<h4>@language.Getkey("criticism")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CritiqueEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" type="hidden">
                <label asp-for="Id"  type="hidden" class="control-label"></label>
                <input  asp-for="Id"  type="hidden" class="form-control" >
                <span type="hidden" asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@language.Getkey("back to list")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
